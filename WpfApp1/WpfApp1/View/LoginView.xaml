<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="login" Height="450" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid Background="LightBlue">
        <Grid VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Username :" Margin="10" TextAlignment="Center" Foreground="#333333"/>
            <TextBox Grid.Row="1" x:Name="txtAdminName" Margin="10" Width="150" Background="#FFFFFF" Foreground="#333333"/>

            <TextBlock Grid.Row="2" Text="Password :" Margin="10" TextAlignment="Center" Foreground="#333333"/>
            <PasswordBox Grid.Row="3" x:Name="txtPassword" Margin="10" Width="150" Background="#FFFFFF" Foreground="#333333"/>

            <Button Grid.Row="4" Content="Login" Margin="10" Width="100" Click="LoginButton_Click" Background="#007ACC" Foreground="#FFFFFF"/>
        </Grid>
    </Grid>
</Window>